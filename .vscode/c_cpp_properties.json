{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**", 
                "C:/MinGW/include",                      // MinGW include path
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.19041.0/ucrt"  // Windows SDK path, if needed
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "C:/MinGW/bin/g++.exe",     // Path to MinGW or other compiler
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64"               // For MinGW. Use "msvc-x64" for Visual Studio compiler.
        }
    ],
    "version": 4
}